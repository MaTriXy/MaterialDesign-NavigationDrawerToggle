<resources>

<!--Erik Jhordan Gonzalez Reyes-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->

        <!--<item name="android:windowBackground">@color/accent</item>-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
       <item name="android:textColorPrimary">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--&lt;!&ndash; disable window actionbar, cause u have an toolbar &ndash;&gt;-->
        <!--<item name="windowActionBar">false</item>-->


    </style>

    <!--styling color for arrow-->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:titleTextStyle">@style/MyTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="MyTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>



</resources>
